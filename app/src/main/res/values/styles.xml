<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="LinkAppearance" parent="ProfileBaseAppearance">
		<item name="android:clickable">true</item>
		<item name="android:textSize">@dimen/text_normal</item>
	</style>

	<style name="FavoriteAppearance" parent="ProfileBaseAppearance">
		<item name="android:textSize">@dimen/text_normal</item>
	</style>

	<style name="NameAppearance" parent="ProfileBaseAppearance">
		<item name="android:textSize">@dimen/text_header</item>
		<item name="android:ellipsize">marquee</item>
	</style>

	<style name="ProfileBaseAppearance">
		<item name="android:layout_marginRight">@dimen/margin_small</item>
		<item name="android:layout_marginLeft">@dimen/margin_small</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:maxLines">1</item>
	</style>

	<style name="ProgressBar">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
	</style>
</resources>
